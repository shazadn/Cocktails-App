<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>
        <variable
            name="results"
            type="com.project.cocktails.domain.Cocktail" />
        <variable
            name="resultsCallback"
            type="com.project.cocktails.recycler_adapters.CocktailClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#DFCE76"
            app:cardCornerRadius="10dp"
            app:elevation="3dp"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tvCocktail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-medium"
                android:hint="Joke"
                android:text="@{results.strDrink}"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

            <View
                android:id="@+id/clickableOverlay"
                android:layout_width="402dp"
                android:layout_height="98dp"
                android:onClick="@{() -> resultsCallback.onClick(results)}" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>