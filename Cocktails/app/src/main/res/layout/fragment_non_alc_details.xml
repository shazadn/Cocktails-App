<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.project.cocktails.viewmodel.NonAlcDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7BA390"
        tools:context=".CocktailDetailsFragment">

        <TextView
            android:id="@+id/tv_CocktailName"
            android:layout_width="274dp"
            android:layout_height="23dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="35dp"
            android:text="@{`Drink : `+ viewmodel.selectedProperty.strDrink}"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imgDrink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgDrink"
            android:layout_width="333dp"
            android:layout_height="302dp"
            android:layout_gravity="center|left"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:shape="rectangle"
            android:visibility="visible"
            app:imageUrl="@{viewmodel.selectedProperty.strDrinkThumb}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_CocktailName"
            app:layout_constraintVertical_bias="0.427" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>